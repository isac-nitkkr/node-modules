{
  "compilerOptions": {
    /* Base Options: */
    "allowJs": false,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "es5",

    /* Strictness */
    "strict": true,

    /* Bundled projects */
    "incremental": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "plugins": [{ "name": "next" }],

    /* Path Aliases */
    "paths": {
      "~/api/*": ["./app/api/*"],
      "~/app/*": ["./app/[locale]/*"],
      "~/assets/*": ["./public/assets/*"],
      "~/*": ["./*"],
    },
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"],
  "exclude": ["node_modules"],
}
